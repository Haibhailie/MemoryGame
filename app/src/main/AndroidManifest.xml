<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ass3cmpt276.assignment3cmpt276">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/red"
        android:label="@string/app_name"
        android:roundIcon="@drawable/red"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameSpace"
            android:label="activity_game_space"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".IntroScreen"
            android:screenOrientation="landscape"/>
        <activity android:name=".OptionsActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".helpScreen"
            android:screenOrientation="landscape"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>