<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ass3cmpt276.assignment3cmpt276">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameSpace"
            android:label="@string/title_activity_game_space"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".IntroScreen" />
        <activity android:name=".OptionsActivity" />
        <activity android:name=".helpScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>