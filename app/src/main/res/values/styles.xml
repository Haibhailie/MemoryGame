<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2DBAAA</item>
        <item name="colorPrimaryDark">#249488</item>
        <item name="colorAccent">#0d3733</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_right_slide</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_left_slide</item>
        <item name="android:activityOpenExitAnimation">@anim/out_left_slide</item>
        <item name="android:activityCloseExitAnimation">@anim/out_right_slide</item>
    </style>
</resources>